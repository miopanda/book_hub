<%= render "shared/second-header" %>

<div class="requests-wrapper">

<%= form_with model: @request, local: true do |f| %>
  <div class="request-form">
    <h3 class="request-title">リクエストを投稿する</h3>
    <%= f.collection_select(:request_type_id, RequestType.all, :id, :name, {}, {class:"type-select"}) %>
    <%= f.text_field :title, class:"title", placeholder:"タイトル" %>
    <%= f.text_area :message, class:"message", placeholder:"メッセージ" %>
    <%= f.hidden_field :resolved, value: false %>
    
    <%= f.submit "投稿する" ,class:"btn" %>
  </div>
<% end %>

<%= link_to "リクエスト一覧", requests_path, class:"post" %>

</div>