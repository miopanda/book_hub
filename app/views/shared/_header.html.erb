<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="top-page-header">
  <div class="header-bar-contents">
    <div class="header-left">
    BookHub
    </div>
    <ul class="header-right">
      <% if user_signed_in? %>
        <li class="header-menu"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li class="header-menu"><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li class="header-menu"><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <ul class="nav">
    <div class="nav-left">
      <li class="nav-menu"><%= link_to 'BookHubとは', '#' %></li>
      <li class="nav-menu"><%= link_to '本を登録する', new_book_path %></li>
      <li class="nav-menu"><%= link_to 'リクエストする', '#' %></li>
    </div>
    <div class="nav-right">
      <% if user_signed_in? %>
        <div class="mypage"><%= link_to "#{current_user.name}さん", user_path(current_user), class: "user-name" %></div>
      <% else %>
        <div class="mypage"><%= link_to "マイページ", new_user_session_path %></div>
      <% end %>
      
    </div>
  </ul>
</header>